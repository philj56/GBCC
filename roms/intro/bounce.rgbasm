
SECTION "Bounce Table", ROM0

BOUNCE_LENGTH EQU 80
EXPORT BOUNCE_LENGTH
BounceTable::
Y SET 40.0
V SET 0.0

REPT BOUNCE_LENGTH
Y SET Y + V
IF Y < 0.0
Y SET -Y
V SET -V
V SET DIV(V, 2.0)
ENDC
  db (41.0 - Y) >> 16
  ; PRINTI (41.0 - Y) >> 16
  ; PRINTT ",\n"
V SET V - DIV(9.81, 100.0)
ENDR
REPT 256-BOUNCE_LENGTH
  db 0
ENDR
